<% content_for :title do -%>
<%=h @user.login -%>
<%end -%>

<div class="content">
	<div class="sidebar">
		<% if @current_user && (@user != @current_user) %>
			<% if @following %>
				<%= link_to "Remove", remove_path, :method=>:delete %>
			<% else -%>
				<%= link_to "Follow", follow_path, :method=>:post %>
			<% end %>
		<% end %>
	</div>
	<div class="statuses">
		<% if @user == @current_user %>
			<H2 id="form_label">What's up?</H2>
			<% form_for @status, :url => statuses_url do |f| %>
			  <%= f.error_messages %>
			  <%= f.text_area :content, :size =>"40x2" %><br />

			  <%= f.submit "update" %>

			<% end %>
			<hr/>
		<% end %>
		<h2>Home</h2>
		 <%= render :partial => "status", :collection => @statuses, :locals => {:user=>@user} -%>
	</div>
	
	
</div>

