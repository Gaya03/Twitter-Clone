<div class="status detail">
		
		 <%= render :partial => "statusDetail", :object => @status, :locals => {:user=>@user} -%>
		<div class="user"><a href="<%= statuses_path :login=>@user.login %>"><%=h @user.login%></a></div>
		<% if @current_user && (@user == @current_user)%>
		    <div class="delete">
		        <p class="notice">Are you sure you want to delete this status?</p>
		        <%= link_to "Delete", delete_status_path, :login=>@user.login, :id=>@status.id, :method=>:delete %>
		    </div>
		<% end %>
</div>
